{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && ($uid === auth.uid || !data.exists())",
        ".validate": "newData.hasChildren(['fullName', 'email', 'phoneNumber', 'userType'])"
      }
    },
    "cars": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('userType').val() === 'provider'",
      "$carId": {
        ".read": "auth != null",
        ".write": "auth != null && (data.child('vendorId').val() === auth.uid || root.child('users').child(auth.uid).child('userType').val() === 'admin')",
        "verified": {
          ".write": "auth != null && root.child('users').child(auth.uid).child('userType').val() === 'admin'"
        }
      }
    },
    "buses": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('userType').val() === 'provider'",
      "$busId": {
        ".read": "auth != null",
        ".write": "auth != null && (data.child('vendorId').val() === auth.uid || root.child('users').child(auth.uid).child('userType').val() === 'admin')",
        "verified": {
          ".write": "auth != null && root.child('users').child(auth.uid).child('userType').val() === 'admin'"
        }
      }
    },
    "bookings": {
      ".read": "auth != null",
      "$bookingId": {
        ".read": "auth != null && (data.child('customerId').val() === auth.uid || data.child('vendorId').val() === auth.uid || root.child('users').child(auth.uid).child('userType').val() === 'admin')",
        ".write": "auth != null && (data.child('customerId').val() === auth.uid || data.child('vendorId').val() === auth.uid || root.child('users').child(auth.uid).child('userType').val() === 'admin')"
      }
    },
    "ride_packages": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('userType').val() === 'admin'",
      "$packageId": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('users').child(auth.uid).child('userType').val() === 'admin'"
      }
    },
    "package_cars": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('userType').val() === 'admin'",
      "$packageId": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('users').child(auth.uid).child('userType').val() === 'admin'"
      }
    },
    "package_pricing": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('userType').val() === 'admin'",
      "$packageId": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('users').child(auth.uid).child('userType').val() === 'admin'"
      }
    },
    "package_bookings": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$bookingId": {
        ".read": "auth != null && (data.child('customerId').val() === auth.uid || data.child('vendorId').val() === auth.uid || root.child('users').child(auth.uid).child('userType').val() === 'admin')",
        ".write": "auth != null && (!data.exists() || data.child('customerId').val() === auth.uid || data.child('vendorId').val() === auth.uid || root.child('users').child(auth.uid).child('userType').val() === 'admin')"
      }
    }
  }
} 