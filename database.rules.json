{
  "rules": {
    "users": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('userType').val() === 'admin'",
      "$uid": {
        ".read": "auth != null && ($uid === auth.uid)",
        ".write": "auth != null && ($uid === auth.uid || !data.exists())",
        ".validate": "newData.hasChildren(['fullName', 'email', 'phoneNumber', 'userType'])"
      }
    },
    "cars": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('userType').val() === 'provider'"
    },
    "bookings": {
      "$uid": {
        ".read": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('userType').val() === 'provider')",
        ".write": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('userType').val() === 'provider')"
      }
    }
  }
} 